<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="partner_view_tree"
            model="ir.ui.view">
        <field name="name">auditors.partner.view.tree</field>
        <field name="model">res.partner</field>
        <field eval="95"
               name="priority" />
        <field name="arch"
               type="xml">
            <tree>
                <field name="name" />
                <field name="profession" />
                <field name="university_id" />
                <field name="phone" />
                <field name="mobile" />
                <field name="email" />
                <field name="year_ids" />
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="partner_view_form"
            model="ir.ui.view">
        <field name="name">auditors.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id"
               ref="base.view_partner_form" />
        <field eval="95"
               name="priority" />
        <field name="arch"
               type="xml">
            <field name="company_type"
                   position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <field name="gender"
                   position="after">
                <field name="civil_status" />
            </field>
            <xpath expr="//group"
                   position="inside">
                <group name="auditor_years"
                       attrs="{'invisible':[('auditor','=',False)]}">
                    <field name="year_ids"
                           widget="many2many_tags"
                           attrs="{'invisible':[('auditor','=',False)]}" />
                </group>
            </xpath>
            <page name="internal_notes"
                  position="before">
                <page name="resume"
                      string="Resume"
                      attrs="{'invisible':[('auditor','=',False)]}">
                    <field name="auditor"
                           invisible="True" />
                    <group string="Profession">
                        <group>
                            <field name="profession" />
                            <field name="university_id" />
                        </group>
                        <group>
                            <field name="registration_number" />
                            <field name="school_id" />
                        </group>
                    </group>
                    <group string="Resume">
                        <field name="work" />
                        <field name="control" />
                        <field name="studies" />
                        <field name="interests" />
                    </group>
                </page>
            </page>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="partner_view_search"
            model="ir.ui.view">
        <field name="name">auditors.partner.view.search</field>
        <field name="model">res.partner</field>
        <field name="arch"
               type="xml">
            <search>
                <field name="name" />
                <field name="year_ids" />
                <group string="Group By">
                    <filter name="group_by_parent_id"
                            string="Profession"
                            context="{'group_by': 'profession'}" />
                </group>
                <filter string="Actual Year"
                        name="filter_actual_year"
                        domain="[('year_ids', 'ilike', (context_today().strftime('%%Y')))]" />
            </search>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="partner_action_form"
            model="ir.actions.act_window">
        <field name="name">Auditors</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('auditor','=',True)]</field>
        <field name="context">
            { 'default_auditor': True, 'search_default_filter_actual_year': True }
        </field>
        <field name="search_view_id"
               ref="partner_view_search" />
        <field name="view_id"
               ref="partner_view_search" />
        <field name="help"
               type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new auditor.
            </p>
            <p>
                No registries were found.
            </p>
        </field>
    </record>

</odoo>
